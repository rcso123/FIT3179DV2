{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "height": 400,
    "title": { "text": "The Corruption Perception (CPI) Score in Country" },
    "data": {
        "url":
        "https://raw.githubusercontent.com/rcso123/FIT3179DV2/main/cpi_short.csv"

    },
    "mark": "circle",
    "encoding": {
        "x": { "field": "Country ", "type": "nominal"},
        "y": { "field": "CPI Score", "type": "quantitative"},
        "size": {"field": "Water Access", "type":"quantitative"},
        "tooltip": [
            {"field":"Country ", "type": "nominal"},
            {"field": "CPI Score", "type": "quantitative"},
            {"field": "Water Access", "type": "quantitative"}
        ]
    }
}

